<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6E4E1"
    tools:context=".OnlineCoursesFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/back_button_description"
            android:src="@drawable/ic_arrow_back"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online Courses"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"/>

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="75dp"
        android:paddingBottom="25dp"
        android:gravity="center_horizontal"
        tools:ignore="MissingDefaultResource">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:paddingBottom="20dp"
                android:orientation="vertical">

                <!-- CardView for "Computing Essentials" -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cpp"
                    android:layout_width="320dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_2"
                        android:orientation="horizontal">

                        <!-- Content for Computing Essentials -->
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="C++"
                            android:paddingTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="23sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/c_" />

                        <!-- You can add more content here -->
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- CardView for "Communication Skill I" -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/java"
                    android:layout_width="320dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_5"
                        android:orientation="horizontal">

                        <!-- Content for Communication Skill I -->
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="Java"
                            android:paddingTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="23sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/java" />

                        <!-- You can add more content here -->
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- CardView for "Communication Skill II" -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/iot"
                    android:layout_width="320dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_4"
                        android:orientation="horizontal">

                        <!-- Content for Communication Skill II -->
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="IOT"
                            android:paddingTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="23sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/iot" />
                        <!-- You can add more content here -->
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <!-- CardView for "Applied Mathematics I" -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/php"
                    android:layout_width="320dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_6"
                        android:orientation="horizontal">

                        <!-- Content for Applied Mathematics I -->
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="PHP"
                            android:paddingTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="23sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/php" />

                        <!-- You can add morecontent here -->
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- CardView for "Applied Mathematics II" -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/python"
                    android:layout_width="320dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_2"
                        android:orientation="horizontal">

                        <!-- Content for Applied Mathematics II -->
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="Python"
                            android:paddingTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="23sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/python" />

                        <!-- You can add more content here -->
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/c"
                    android:layout_width="320dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_4"
                        android:orientation="horizontal">

                        <!-- Content for Applied Mathematics II -->
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="C"
                            android:paddingTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="23sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/pic" />

                        <!-- You can add more content here -->
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ds"
                    android:layout_width="320dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_5"
                        android:orientation="horizontal">

                        <!-- Content for Applied Mathematics II -->
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="Data Structure"
                            android:paddingTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="23sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/ds" />

                        <!-- You can add more content here -->
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>