<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F6E4E1"
    android:layout_height="match_parent"
    tools:context=".edit_profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6E4E1">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="fitXY"
            android:background="@drawable/top_background"
            app:layout_collapseMode="parallax"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription,NotSibling" />

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingLeft="22dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Back"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="@id/imageView"
            app:layout_constraintTop_toTopOf="@id/imageView"
            tools:ignore="TouchTargetSizeCheck" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:ignore="MissingConstraints">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:src="@drawable/avatar" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/buttonsGroup"
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:orientation="vertical"
            android:paddingTop="290dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            tools:ignore="MissingConstraints,NotSibling">

            <!-- Edit Name CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/editnameCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="8dp">

                <EditText
                    android:id="@+id/editname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="start|center_vertical"
                    android:padding="16dp"
                    android:hint=" Enter your name "
                    android:textColor="#000000"
                    tools:ignore="MissingConstraints"
                    app:cardCornerRadius="8dp"/>

            </androidx.cardview.widget.CardView>

            <!-- Edit Email CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/editemailCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="8dp">

                <EditText
                    android:id="@+id/editmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="start|center_vertical"
                    android:padding="16dp"
                    android:hint=" Email"
                    android:textColor="#000000"
                    tools:ignore="MissingConstraints" />

            </androidx.cardview.widget.CardView>

            <!-- Edit Password CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/editpasswordCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="start|center_vertical"
                        android:padding="16dp"
                        android:hint="Password"
                        android:textColor="#000000"
                        android:inputType="textPassword"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/showPasswordIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_eye_hidden"
                        android:contentDescription="Toggle Password Visibility"
                        android:clickable="true"
                        android:focusable="true"
                        tools:ignore="TouchTargetSizeCheck" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Add other CardViews here -->
            <!-- Rate Us Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/editphoneCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="8dp">

                <EditText
                    android:id="@+id/editphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="start|center_vertical"
                    android:padding="16dp"
                    android:hint=" Phone"
                    android:textColor="#000000"
                    tools:ignore="MissingConstraints" />

            </androidx.cardview.widget.CardView>

            <!-- Share App Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/editcityCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="8dp">

                <EditText
                    android:id="@+id/editcity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="start|center_vertical"
                    android:padding="16dp"
                    android:hint=" City, State"
                    android:textColor="#000000"
                    tools:ignore="MissingConstraints" />

            </androidx.cardview.widget.CardView>

            <!-- Logout Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/editcountryCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="8dp">

                <EditText
                    android:id="@+id/editcountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="start|center_vertical"
                    android:padding="16dp"
                    android:hint=" Country"
                    android:textColor="#000000"
                    tools:ignore="MissingConstraints" />

            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/sendFeedbackButton"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Save Changes"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
