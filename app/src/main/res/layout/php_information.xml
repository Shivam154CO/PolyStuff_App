<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/banner_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/php"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="H,8:6" />

        <TextView
            android:id="@+id/atc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About The Course"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:paddingStart="9dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/banner_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Course Information Paragraph -->
        <TextView
            android:id="@+id/course_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Introduction to Web Development with PHP and SQL serves as a gateway to understanding the fundamentals of web programming using PHP and SQL. Students will gain essential knowledge and practical skills in building dynamic web applications by exploring topics such as PHP syntax, SQL database management, and integration techniques. Through hands-on projects and exercises, students will not only grasp theoretical concepts but also develop proficiency in applying PHP and SQL to real-world scenarios. By the end of the course, students will possess a solid foundation in web development with PHP and SQL, paving the way for further exploration and advancement in the field of web development and database management."
            android:justificationMode="inter_word"
            android:textSize="16dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/atc"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- Course CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/course_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/course_info"
            app:cardCornerRadius="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/course_image"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/km"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/course_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:text="Department:\nComputer Science"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/course_image"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/instructor_institution"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="11dp"
                    android:text="Institution:\nIIT Bombay"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/course_image"
                    app:layout_constraintTop_toBottomOf="@+id/course_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expertise: Process Control\nEngineering"
                    android:textStyle="bold"
                    android:paddingTop="14dp"
                    android:textSize="17dp"
                    app:layout_constraintStart_toEndOf="@+id/course_image"
                    app:layout_constraintTop_toBottomOf="@+id/instructor_institution"
                    android:paddingStart="16dp" />

                <TextView
                    android:id="@+id/course_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:paddingStart="10dp"
                    android:text="Prof.Kannan\n Moudgalya"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/instructor_institution"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Course Code CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/course_code_cardview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/course_duration_cardview"
            app:layout_constraintTop_toBottomOf="@+id/course_card"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp">

            <!-- Course Code Content -->
            <TextView
                android:id="@+id/course_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Course Code\nIT5103"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <!-- Course Duration CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/course_duration_cardview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/course_code_cardview"
            app:layout_constraintTop_toBottomOf="@+id/course_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp">

            <!-- Course Duration Content -->
            <TextView
                android:id="@+id/course_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Course Duration\nSelf Paced"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <!-- Course Link CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/course_link_cardview"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/course_duration_cardview"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="8dp"
            tools:ignore="MissingConstraints,NotSibling">

            <!-- Course Link Content -->
            <TextView
                android:id="@+id/course_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Course Link \nhttps://onlinecourses.swayam2.ac.in/aic20_sp32/preview"
                android:textSize="18sp"
                android:autoLink="web" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>